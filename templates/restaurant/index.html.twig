
{% block title %}Restaurant index{% endblock %}
{% block head %}<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">{% endblock %}
{% block body %}
    <h1>Votre Restaurants</h1>

    <table class="table table-success table-striped">
       
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ restaurant.nom }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ restaurant.photos }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ restaurant.adresse }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ restaurant.categorie }}</td>
            </tr>
            <tr>
                <th>Numero_telephone</th>
                <td>{{ restaurant.numeroTelephone }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ restaurant.rating }}</td>
            </tr>
            <td>actions</td><td>
                    <a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">show</a>
                    <a href="{{ path('app_menu_new',{'id_restaurant': restaurant.id})}}">Create new menu</a>
                   <a href="{{ path('app_reservation_new'),{'id_restaurant': restaurant.id} }}">Create new reservation</a>
                    <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}">edit</a>
                   <a href="{{ path('app_restaurant_new') }}">Create new</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
